<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="340dp"
        android:layout_height="270dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/cardview">

        <TextView
            android:layout_width="311dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Item Name"
            android:id="@+id/itemName"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:gravity="center" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search Steam Market"
            android:id="@+id/marketButton"
            android:layout_gravity="center_horizontal|bottom" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Case Name"
            android:id="@+id/itemCase"
            android:layout_gravity="center"
            android:layout_marginTop="75dp"
            android:textStyle="bold"
            android:gravity="center" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/subOne"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:background="@drawable/purbleround" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/subTwo"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginTop="65dp"
            android:gravity="center"
            android:background="@drawable/orangeround" />

        <com.android.volley.toolbox.NetworkImageView
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            tools:src="@drawable/ic_launcher"
            android:id="@+id/image1"
            android:layout_gravity="center"
            android:layout_marginTop="10dp" />

        <ImageView
            android:layout_width="35dp"
            android:layout_height="27dp"
            android:id="@+id/imageView"
            android:layout_gravity="left|bottom"
            android:src="@drawable/cscase"
            android:layout_marginBottom="45dp"
            android:layout_marginLeft="91dp" />

        <TextView
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="$$$"
            android:id="@+id/itemPrice"
            android:layout_gravity="right|top"
            android:layout_marginTop="90dp"
            android:layout_marginRight="20dp"
            android:gravity="right" />
    </FrameLayout>
</RelativeLayout>